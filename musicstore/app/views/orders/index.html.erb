<p id="notice"><%= notice %></p>

<h1>Orders</h1>

<table class="table">
  <thead>
    <tr>
      <th>Order id</th>
      <th>Total</th>
      <th>Date</th>
      <th>User ID</th>
      <th colspan="3"></th>
    </tr>
  </thead>


  <tbody>
    <% @orders.each do |order| %>
      <tr>
        <td><%= order.id %></td>
        <td><%= order.total %></td>
        <td><%= order.created_at %></td>
        <td><%= order.users_id %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Order', new_order_path %>
