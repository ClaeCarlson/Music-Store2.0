

<div style="display: none">
<%=

user = current_user.id

results = Order.find_by_sql("SELECT * FROM orders WHERE users_id = #{user}" );
=%>
</div>


<div class="jumbotron" style="background-color: white">
	<h2>Orders for <%= current_user.email =%></h2>
<table class="table">
  <thead>
    <tr>
      <th>Order id</th>
      <th>Total</th>
      <th>Date</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% results.each do |order| %>
      <tr>
        <td><%= "#{order['id']}" %></td>
        <td><%= "#{order['total']}" %></td>
        <td><%= "#{order['created_at']}" %></td>
         <td><%= link_to 'Delete Order', order, method: :delete, data: { confirm: 'Are you sure?' } %></td>

      </tr>
    <% end %>
  </tbody>
</table>
</div>


